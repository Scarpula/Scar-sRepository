{
    "manifest_version": 3,
    "name": "Product Uploader",
    "version": "1.0",
    "description":"Automatically upload products to SmartStore from various websites.",
    "permissions":["activeTab", "storage","<all_urls"],
    "background":{
        "service_worker":"background.js"
    },
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["content.js"]
        }
    ],
    "action":{
        "default_popup":"popup.html",
        "default_icon":{
            "16":"img/icon16.jpg",
            "48": "img/icon48.jpg",
            "128": "img/icon128.jpg"
        }
    },
    "icons": {
        "16": "img/icon16.jpg",
        "48": "img/icon48.jpg",
        "128": "img/icon128.jpg"
      }
}